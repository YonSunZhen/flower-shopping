<view class="container">
     <form bindsubmit="createOrder" report-submit="true">     
     <view class="goods-list">
        <view class="list-title">商品列表</view>
        <view class="a-goods" wx:for-items="{{goodsList}}" wx:key="{{index}}">
            <view class="img-box">
                <image src="{{item.img}}" class="img" />
            </view>
            <view class="text-box">
                <view class="arow arow01">
                    <view class="goods-name">{{item.name}}</view>
                    <view class="goods-price">¥ {{item.price}}</view>
                </view>
                <view class="arow">
                    <!-- <view class="goods-label">{{item.label}}</view> -->
                    <view class="goods-num">x {{item.order_quantity}}</view>
                </view>
            </view>
        </view>
     </view>
     <view class="peisong-way">
        <view class="row-box" >
            <view class="row-label">配送信息</view>
            <!-- <radio-group bindchange="radioChange">
              <label class="radio">
                <radio value="kd" checked="{{peisongType == 'kd'}}" /> 快递
              </label>
              <label class="radio">
                <radio value="zq" checked="{{peisongType == 'zq'}}" /> 到店自取
              </label>
            </radio-group> -->
        </view>
        <view class="address-box" >
          <view class="add-address" wx:if="{{isAddrSelected === 'false'}}">
              <view class="title" bindtap="addAddress">新增收货地址</view>
          </view>
          <view class="select-address" wx:if="{{isAddrSelected === 'error'}}">
              <view class="title" bindtap="selectAddress">选择收货地址</view>
          </view>
          <view class="show-address" wx:if="{{isAddrSelected === 'true'}}" bindtap="selectAddress">
              <view class="name-tel">{{curAddressData.consignee_name}}  {{curAddressData.consignee_phone}}</view>
              <view class="addr-text">{{curAddressData.address_detail}}</view>
          </view>
        </view>
        <view class="row-box">
            <view class="row-label">派送时间</view>
            <view class="right-text">
                <input name="deliver_time" type="text" class="liuyan" placeholder="输入派送时间" />
            </view>
        </view>
        <view class="row-box">
            <view class="row-label">备注</view>
            <view class="right-text">
                <input name="deliver_remark" type="text" class="liuyan" placeholder="如需备注请输入" />
            </view>
        </view>
     </view>


     <!-- <view class="goods-info" wx:if="{{(isNeedLogistics > 0 && yunPrice > 0) || (!hasNoCoupons)}}">
        <view class="row-box" wx:if="{{isNeedLogistics > 0 && yunPrice > 0}}">
            <view class="row-label">商品金额</view>
            <view class="right-text">¥ {{allGoodsPrice}}</view>
        </view>
        <view class="row-box" wx:if="{{isNeedLogistics > 0 && yunPrice > 0}}">
            <view class="row-label">运费</view>
            <view class="right-text">+ ¥ {{yunPrice}}</view>
        </view>
        <view class="row-box" wx:if="{{!hasNoCoupons}}">
            <view class="row-label">优惠券</view>
            <view class="right-text">- ¥ {{youhuijine}}</view>
        </view>
     </view> -->

     <view class="jiesuan-box">
        <view class="left-price">
            <view class="total">合计：¥ {{totalScoreToPay}}</view>
        </view>
        <button class="to-pay-btn" formType="submit">提交订单</button>
    </view>
    </form>
</view>
