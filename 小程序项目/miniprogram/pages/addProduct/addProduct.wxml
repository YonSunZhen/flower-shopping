<view class="container">
    <form bindsubmit="bindSave" report-submit="true">
      <view class="form-box">
          <view class="row-wrap">
              <view class="label">商品名称</view>
              <view class="label-right">
                  <input name="productName" class="input" type="text" placeholder="输入商品名称" value="{{productName}}"/>
              </view>
          </view>
          <view class="row-wrap">
              <view class="label">商品价格</view>
              <view class="label-right">
                  <input name="productPrice" class="input" type="text" placeholder="输入商品价格" value="{{productPrice}}"/>
              </view>
          </view>
          <view class="row-wrap" bindtap="selectCity">
              <view class="label">选择类型</view>
              <picker name="productCategroy" value='{{categroyList.name}}' bindchange="bindCategroyChange" range="{{categroyList}}" range-key="categroy_name">
                {{showCategroyStr}}
              </picker>
          </view>
          <view class="row-wrap">
              <view class="label">商品数量</view>
              <view class="label-right">
                  <input name="productCount" class="input" type="text" placeholder="输入商品数量" value="{{productCount}}"/>
              </view>
          </view>
          <view class="row-wrap">
              <view class="label">商品备注</view>
              <view class="label-right">
                  <input name="productRemark" class="input" type="text" placeholder="输入商品备注" value="{{productRemark}}"/>
              </view>
          </view>

          <view class="row-wrap" bindtap="selectCity">
              <view class="label">选择状态</view>
              <picker name="productState" bindchange="bindStatusChange" range="{{statusList}}">
                {{showStatusStr}}
              </picker>
          </view>

          <view class="weui-cells__title">商品描述</view>
          <view class="weui-cells weui-cells_after-title">
              <view class="weui-cell">
                  <view class="weui-cell__bd">
                      <textarea name="productDescript" class="weui-textarea" placeholder="请输入描述" value='{{productDescript}}' style="height: 3.3em" />
                      <!-- <view class="weui-textarea-counter">0/200</view> -->
                  </view>
              </view>
          </view>

          <view class="weui-cells">
              <view class="weui-cell">
                  <view class="weui-cell__bd">
                      <view class="weui-uploader">
                          <view class="weui-uploader__hd">
                              <view class="weui-uploader__title">选择商品图片</view>
                              <view class="weui-uploader__info">{{files.length}}/1</view>
                          </view>
                          <view class="weui-uploader__bd">
                              <view class="weui-uploader__files" id="uploaderFiles">
                                  <block wx:for="{{files}}" wx:key="*this">
                                      <!-- 默认数组的当前项的下标变量名默认为  index ，数组当前项的变量名默认为  item  -->
                                      <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}" bindlongpress="deleteImage" data-index="{{index}}">
                                          <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                                      </view>
                                  </block>
                              </view>
                              <view class="weui-uploader__input-box">
                                  <view class="weui-uploader__input" bindtap="chooseImage"></view>
                              </view>
                          </view>
                      </view>
                  </view>
              </view>
          </view>
