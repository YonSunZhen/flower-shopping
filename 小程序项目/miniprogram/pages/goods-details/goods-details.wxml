<view class='container'>
  <view class='swiper-container'>
    <swiper class="swiper_box">
      <block>
        <swiper-item>
          <image src="../../images/11.jpg" class="slide-image" width="355" height="150" mode="aspectFit" lazy-load="true" />
        </swiper-item>
      </block>
    </swiper>
    <view class="dots">
      <block>
        <view class="dot"></view>
      </block>
    </view>
  </view>
  <view class='goods-info'>
    <view class="goods-title">茉莉</view>
    <view class="goods-price" style="padding-left:35rpx;">¥ 100</view>
    <view class="goods-price" style="color:#999;font-size:24rpx;">购买10次</view>
    <view class="goods-price" style="color:#999;font-size:24rpx;">剩余量100</view>
  </view>
  <view class='space'></view>
  <view class='goods-des-info'>
    <view class="label-title">商品介绍</view>
    <view class="goods-text">
      <!-- <template is="wxParse" data="{{wxParseData:article.nodes}}" /> -->
      <view>打暑假工房顶上发挥第三方或</view>
    </view>
  </view>
  <view class='footer-box'>
    <view class="contact">
      <contact-button style="opacity:0;position:absolute;" type="default-dark" session-from="weapp" size="27"></contact-button>
      <view style='position:absolute;bottom:10rpx;'> 客服 </view>
    </view>
    <view class="shop-cart-btn" bindtap="goShopCar">
      <view class="shop-num">(1)</view>
      <view style='position:absolute;bottom:10rpx;'> 购物车 </view>
    </view>
    <view class="join-shop-cart" bindtap="toAddShopCar">加入购物车</view>
    <view class="now-buy" bindtap="tobuy">立即购买</view>
  </view>
</view>
